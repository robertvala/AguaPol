<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RiegoFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/gris"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_view_border_second"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSalidaLago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left"
                        android:isScrollContainer="false"
                        app:boxStrokeErrorColor="@color/advertencia"
                        app:endIconMode="custom"
                        app:endIconTint="#000000"
                        app:errorEnabled="false"
                        app:errorIconDrawable="@android:drawable/ic_dialog_alert"
                        app:errorIconTint="@color/advertencia"
                        app:errorTextColor="@color/advertencia"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:startIconCheckable="true"
                        app:startIconContentDescription="Mapa"
                        app:startIconDrawable="@drawable/ic_detall_1"
                        app:startIconTint="#000000"
                        app:startIconTintMode="src_in">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tietSalidaLago"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:editable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:hint="Salida del lago"
                            android:text="19.5"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/gris"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_view_border_second"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCanchas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left"
                        android:isScrollContainer="false"
                        app:boxStrokeErrorColor="@color/advertencia"
                        app:endIconMode="custom"
                        app:endIconTint="#000000"
                        app:errorEnabled="false"
                        app:errorIconDrawable="@android:drawable/ic_dialog_alert"
                        app:errorIconTint="@color/advertencia"
                        app:errorTextColor="@color/advertencia"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:startIconCheckable="true"
                        app:startIconContentDescription="Mapa"
                        app:startIconDrawable="@drawable/ic_detall_1"
                        app:startIconTint="#000000"
                        app:startIconTintMode="src_in">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tietCanchas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:editable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:hint="Canchas de ingeniería"
                            android:text="19.5"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/gris"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_view_border_second"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSTecnologias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left"
                        android:isScrollContainer="false"
                        app:boxStrokeErrorColor="@color/advertencia"
                        app:endIconMode="custom"
                        app:endIconTint="#000000"
                        app:errorEnabled="false"
                        app:errorIconDrawable="@android:drawable/ic_dialog_alert"
                        app:errorIconTint="@color/advertencia"
                        app:errorTextColor="@color/advertencia"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:startIconCheckable="true"
                        app:startIconContentDescription="Mapa"
                        app:startIconDrawable="@drawable/ic_detall_1"
                        app:startIconTint="#000000"
                        app:startIconTintMode="src_in">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tietTecnologias"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:editable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:hint="Tecnologías"
                            android:text="19.5"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/gris"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/card_view_border_second"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilRectorado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left"
                        android:isScrollContainer="false"
                        app:boxStrokeErrorColor="@color/advertencia"
                        app:endIconMode="custom"
                        app:endIconTint="#000000"
                        app:errorEnabled="false"
                        app:errorIconDrawable="@android:drawable/ic_dialog_alert"
                        app:errorIconTint="@color/advertencia"
                        app:errorTextColor="@color/advertencia"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:startIconCheckable="true"
                        app:startIconContentDescription="Mapa"
                        app:startIconDrawable="@drawable/ic_detall_1"
                        app:startIconTint="#000000"
                        app:startIconTintMode="src_in">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tietRectorado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:editable="false"
                            android:fontFamily="@font/comfortaa"
                            android:gravity="center"
                            android:hint="Rectorado"
                            android:text="19.5"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llMonitoreoTanques"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icono_2" />

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_light"
                    android:gravity="center"
                    android:text="Monitoreo de tanques"
                    android:textColor="#000000"
                    android:textSize="@dimen/menu_text_size"
                    android:textStyle="normal" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/card_view_border">

                    <LinearLayout
                        android:id="@+id/llEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/comfortaa_light"
                            android:gravity="center"
                            android:text="Tanques bajos"
                            android:textColor="#000000"
                            android:textSize="@dimen/menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNivel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llEstado"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="Nivel de tanque"
                            android:textColor="#050505"
                            android:textSize="@dimen/submenu_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/shape">

                            <TextView
                                android:id="@+id/txtNivelTanqueBajo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="Medio"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llNivel1"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/textViewSensores"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginEnd="46dp"
                                android:layout_toStartOf="@+id/progressBarTanquesBajos"
                                android:fontFamily="@font/comfortaa_light"
                                android:gravity="center"
                                android:text="Sensores" />

                            <Button
                                android:id="@+id/btnS3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textViewSensores"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanquesBajos"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S3"
                                android:textColor="#050505"
                                app:backgroundTint="#00FFFFFF" />

                            <Button
                                android:id="@+id/btnS1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btnS2"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanquesBajos"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S1"
                                android:textColor="#050505"
                                app:backgroundTint="#FFD600" />

                            <Button
                                android:id="@+id/btnS2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btnS3"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanquesBajos"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S2"
                                android:textColor="#050505"
                                app:backgroundTint="#FFD600" />

                            <ProgressBar
                                android:id="@+id/progressBarTanquesBajos"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="200dp"
                                android:layout_height="230dp"
                                android:layout_alignTop="@id/textViewSensores"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="20dp"
                                android:max="100"
                                android:maxHeight="200dp"
                                android:minHeight="200dp"
                                android:mirrorForRtl="false"
                                android:progress="70"
                                android:rotation="-90"
                                android:scaleY="50" />

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gris"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/card_view_border">

                    <LinearLayout
                        android:id="@+id/llEstadoAlto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/comfortaa_light"
                            android:gravity="center"
                            android:text="Tanque elevado"
                            android:textColor="#000000"
                            android:textSize="@dimen/menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llNivelTanqueAlto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llEstadoAlto"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView71"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="Nivel de tanque"
                            android:textColor="#050505"
                            android:textSize="@dimen/submenu_text_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/shape">

                            <TextView
                                android:id="@+id/txtNivelTanqueAlto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="Medio"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llNivelTanqueAlto"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/textViewSensores2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginEnd="46dp"
                                android:layout_toStartOf="@+id/progressBarTanqueAlto"
                                android:fontFamily="@font/comfortaa_light"
                                android:gravity="center"
                                android:text="Sensores" />

                            <Button
                                android:id="@+id/btnS3Alto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textViewSensores2"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanqueAlto"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S3"
                                android:textColor="#050505"
                                app:backgroundTint="#00FFFFFF" />

                            <Button
                                android:id="@+id/btnS1Alto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btnS2Alto"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanqueAlto"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S1"
                                android:textColor="#050505"
                                app:backgroundTint="#FFD600" />

                            <Button
                                android:id="@+id/btnS2Alto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btnS3Alto"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_toStartOf="@+id/progressBarTanqueAlto"
                                android:fontFamily="@font/comfortaa_light"
                                android:text="S2"
                                android:textColor="#050505"
                                app:backgroundTint="#FFD600" />

                            <ProgressBar
                                android:id="@+id/progressBarTanqueAlto"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="200dp"
                                android:layout_height="230dp"
                                android:layout_alignTop="@id/textViewSensores2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="23dp"
                                android:max="100"
                                android:maxHeight="200dp"
                                android:minHeight="200dp"
                                android:mirrorForRtl="false"
                                android:progress="60"
                                android:rotation="-90"
                                android:scaleY="50" />

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>